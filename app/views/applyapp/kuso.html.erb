<% provide(:title, "クソアプリ応募一覧 | 第6回RUNTEQ祭")%>

<div class="flex items-center justify-center">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 p-4">
    <% @kusos.each do |app| %>
      <div class="card bg-base-100 w-full max-w-sm shadow-sm border shadow-md min-h-[400px] flex flex-col">
        <div class="flex items-center justify-center bg-white">
          <%= image_tag "top_image.jpg", class: "hidden md:block w-full h-auto max-w-xs md:max-w-sm" %>
          <%= image_tag "top_image.jpg", class: "md:hidden w-full h-auto max-w-xs" %>
        </div>


        <div class="card-body bg-green-200 flex flex-col space-y-2 p-3 h-full">
          <div class="text-center font-bold p-1 flex flex-row items-center justify-center">
            <%= image_tag "クソアプリバッジ.png", size: "50x50" %>
            <h2 class="font-bebas text-2xl font-light"><%= app.apptitle %></h2>
          </div>
          <div class="flex flex-row space-x-4 justify-center pb-3">
            <%= link_to applyapp_path(app.id),
                        data: {toggle: "tooltip", placement: "bottom"},
                        class: "text-4xl" do %>
              <i class="fa-solid fa-circle-info"></i>
            <% end %>
            <%= link_to "#{app.appurl}",
                        data: {toggle: "tooltip", placement: "bottom"},
                        class: "text-4xl",
                        target: "_black" do %>
              <i class="fa-solid fa-globe"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





