<div class="p-10 flex justify-center">

  <div class="p-4 bg-white w-1/2 flex justify-center">
    <div class="w-2/3">
      <div class="text-center text-5xl p-4 m-4">
        <%= @applyapp.app_title %>
      </div>
      <div class="flex items-center justify-center">
        <%= image_tag "top_image.jpg" ,size: "500x500" %>
      </div>
      <% if @applyapp.kuso_app %>
        <div class="flex justify-center p-4">✨💩クソアプリ💩✨</div>
      <% end %>
      <div class="text-center p-4 m-4 border border-black"><%= @applyapp.enginner_name%></div>
      <div class="text-center p-4 m-4 border border-black"><%= @applyapp.app_description%></div>
      <div class="text-center p-4 m-4 border border-black"><%= @applyapp.app_strongpoint%></div>
      <div class="flex flex-row items-center justify-center">
        <%= link_to "GitHub",
                  "#{@applyapp.github_url}",
                  class: "border border-white rounded p-4 m-4 bg-blue-500 text-white",
                  target: :blank %>
        <%= link_to "ソーシャルポートフォリオ",
                  "#{@applyapp.spf_url}",
                  class: "border border-white rounded p-4 m-4 bg-blue-500 text-white",
                  target: :blank %>
        <%= link_to "X",
                  "#{@applyapp.x_url}",
                  class: "border border-white rounded p-4 m-4 bg-blue-500 text-white",
                  target: :blank %>
        <%= link_to "サービス",
                  "#{@applyapp.app_url}",
                  class: "border border-white rounded p-4 m-4 bg-blue-500 text-white",
                  target: :blank %>
      </div>
    </div>
  </div>
</div>