<div class="bg-blue-200 flex flex-wrap items-center justify-between px-4 py-2 relative">
  <div class="flex items-center space-x-4">
    <!-- スマホ用の短縮タイトル -->
    <%= link_to root_path, class:"text-2xl font-bebas font-bold md:hidden" do %>
      <div>第6回RUNTEQ祭アプリ</div>
    <% end %>

    <!-- PC用の長いタイトル -->
    <%= link_to "第6回RUNTEQ祭 応募一覧アプリ", root_path, class:"hidden text-2xl font-bebas md:text-5xl font-bold md:block"%>
  </div>

  <!-- ハンバーガーメニューのボタン -->
  <button id="menu-button" class="md:hidden p-2 border border-gray-500 rounded">
    ☰
  </button>

  <!-- メニュー（デフォルトは非表示） -->
  <div id="menu" class="hidden md:flex flex-col md:flex-row absolute md:relative top-16 md:top-0 right-0 w-full md:w-auto bg-white md:bg-transparent shadow-lg md:shadow-none rounded-lg md:rounded-none px-4 py-2 z-50">
    <div class="flex flex-col md:flex-row md:items-center md:space-x-4 w-full">
      <%= link_to "アプリ応募はこちら",
                  "https://docs.google.com/forms/d/e/1FAIpQLSeO1CUqvfab4Bm0G0kNrILGT8jSos6xRepqN6-kwbu1Tb2MFQ/viewform?usp=dialog",
                   class: "text-center border border-white rounded px-4 py-2 bg-blue-500 text-white",
                   target: :blank %>

      <!-- 投票ボタン -->
      <div class="border border-white rounded px-4 py-2 bg-gray-300 text-white text-center">投票はこちら</div>

      <%= link_to "運営メンバー",
                  unei_path,
                  class: "text-center border border-white rounded px-4 py-2 bg-blue-500 text-white",
                  target: :blank %>

      

      <!-- 検索フォーム -->
      <div class="flex justify-center md:block bg-white p-2 rounded-lg shadow md:shadow-none w-full md:w-auto">
        <%= search_form_for @q, url: search_applyapp_index_path do |f| %>
          <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-2">
            <%= f.search_field :enginnername_or_apptitle_or_description_or_strongpoint_cont, class: "border border-gray-300 rounded bg-white w-full md:w-64 h-12 p-2" %>
            <%= f.submit "検索", class: "border border-white text-white bg-blue-500 px-4 py-2 rounded cursor-pointer w-full md:w-auto" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- カテゴリメニュー -->
<div class="flex flex-row items-center justify-center bg-blue-500 text-white border border-white">
  <div class="md:text-2xl w-1/2 text-center py-1">
    <%= link_to root_path do %>
      <div>全て</div>
    <% end %>
  </div>
  <div class="border md:text-2xl w-1/2 text-center border border-white">
    <%= link_to kuso_path do %>
      <div class="flex flex-row items-center justify-center py-1">
        <%= image_tag "クソアプリバッジ.png", size: "50x50", class: "hidden md:block" %>
        <div>クソアプリ応募一覧</div>
      </div>
    <% end %>
  </div>
</div>