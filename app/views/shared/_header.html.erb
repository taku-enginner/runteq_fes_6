<div class="bg-blue-200 flex flex-wrap items-center justify-between px-4 py-2 md:py-3 relative">
  <div class="flex items-center space-x-4">
    <!-- スマホ用の短縮タイトル -->
    <%= link_to applyapp_index_path, class:"text-2xl font-bebas font-bold md:hidden" do %>
      <div>第6回RUNTEQ祭アプリ</div>
    <% end %>

    <!-- PC用の長いタイトル -->
    <%= link_to "第6回RUNTEQ祭 応募一覧アプリ", applyapp_index_path, class:"hidden text-2xl font-bebas md:text-5xl font-bold md:block"%>
  </div>

  <!-- ハンバーガーメニューのボタン -->
  <button id="menu-button" class="md:hidden py-2 px-3 border border-gray-500 rounded bg-blue-500 text-white border-white">
    ☰
  </button>

  <!-- メニュー（デフォルトは非表示） -->
  <div id="menu" class="hidden md:flex flex-col md:flex-row absolute md:relative top-16 md:top-0 left-0 md:left-auto w-full md:w-auto bg-white md:bg-transparent shadow-lg md:shadow-none rounded-lg md:rounded-none px-4 py-2 z-50">
    <div class="flex flex-col md:flex-row md:items-center md:space-x-4 w-full">

      <!-- 応募フォーム -->
      <div class="bg-gray-300 text-white px-4 py-2 rounded shadow hover:bg-gray-400 transition duration-200 text-center font-semibold">アプリ応募はこちら</div>

      <!-- 投票フォーム -->
      <%= link_to "投票はこちら",
                  "https://forms.gle/8uGXq2wSkbk5MMqg6",
                   class: "bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600 transition duration-200 text-center font-semibold",
                   target: :blank %>

      <%= link_to "運営メンバー",
                  unei_path,
                  class: "bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600 transition duration-200 text-center font-semibold",
                  target: :blank %>

      

      <!-- 検索フォーム -->
      <div class="flex justify-center md:block bg-white p-2 rounded-lg shadow md:shadow-none w-full md:w-auto">
        <%= search_form_for @q, url: search_applyapp_index_path do |f| %>
          <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-2">
            <%= f.search_field :enginnername_or_apptitle_or_description_or_strongpoint_cont,
                               class: "border border-gray-300 rounded bg-white w-full md:w-64 h-12 p-2",
                               placeholder: "検索ワード" %>
            <%= f.submit "アプリ検索",
                         class: "bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600 transition duration-200 font-semibold w-full md:w-auto" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="flex flex-row items-center justify-center bg-blue-500 text-white overflow-hidden shadow-md">
  <!-- 全てタブ -->
  <%= link_to applyapp_index_path, class: "w-1/2 text-center py-2 md:py-3 border-white border-r hover:bg-blue-600 transition duration-200" do %>
    <div class="text-sm md:text-2xl font-semibold">全て</div>
  <% end %>

  <!-- クソアプリタブ（右端なので右borderは不要） -->
  <%= link_to kuso_path, class: "w-1/2 text-center py-2 md:py-3 hover:bg-blue-600 transition duration-200 flex items-center justify-center gap-2" do %>
    <%= image_tag "クソアプリバッジ.png", size: "40x40", class: "hidden md:inline-block" %>
    <div class="text-sm md:text-2xl font-semibold">クソアプリ部門</div>
  <% end %>
</div>
